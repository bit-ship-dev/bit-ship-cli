{
  "name": "bit-ship",
  "description": "Bit-Ship CLI",
  "type": "module",
  "public": true,
  "version": "0.0.1",
  "bin": {
    "bit-ship": "bin/bin.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "node ./dist/index.mjs",
    "dev": "rollup --config ../../packages/rollup/configs/lib.mjs --watch",
    "build": "npm run typecheck && rollup --config ../../packages/rollup/configs/lib.mjs",
    "lint": "eslint --config ../../packages/eslint/configs/base.js ./src --ext .ts,.mts",
    "nightly": "node ./cli/nightly.mjs",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@repo/ts": "*",
    "@sentry/node": "^8.26.0",
    "@sentry/profiling-node": "^8.26.0",
    "chalk": "^5.3.0",
    "citty": "^0.1.6",
    "confbox": "^0.1.7",
    "consola": "^3.2.3",
    "ofetch": "^1.3.4",
    "unstorage": "^1.10.2",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/uuid": "^10.0.0"
  }
}
