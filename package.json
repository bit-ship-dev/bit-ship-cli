{
  "name": "bit-ship",
  "description": "Bit-Ship CLI",
  "type": "module",
  "public": true,
  "version": "0.0.1",
  "bin": {
    "bit-ship": "bin/bin.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "node ./bin/bin.js",
    "dev": "rollup --config ../../packages/rollup/configs/cli.mjs --watch",
    "build": "rollup --config ../../packages/rollup/configs/cli.mjs",
    "lint": "eslint --config ../../packages/eslint/configs/base.js ./src",
    "nightly": "node ./cli/nightly.mjs",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@sentry/node": "catalog:",
    "chalk": "^5.3.0",
    "citty": "^0.1.6",
    "confbox": "^0.1.7",
    "consola": "catalog:",
    "ofetch": "catalog:",
    "unstorage": "^1.10.2",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@repo/rollup": "workspace:*",
    "@repo/ts": "workspace:*",
    "@repo/eslint": "workspace:*",
    "@types/uuid": "^10.0.0",
    "typescript": "catalog:",
    "rollup": "catalog:"
  }
}
